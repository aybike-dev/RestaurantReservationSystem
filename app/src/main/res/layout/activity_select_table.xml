<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6CACC"
    android:orientation="vertical"
    tools:context=".SelectDate">


    <TextView
        android:id="@+id/txt_table"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Select a table"
        android:textColor="@color/purple_500"
        android:textSize="30sp" />


    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp">



        <ImageButton
            android:id="@+id/image_table1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/masa2" />

        <ImageButton
            android:id="@+id/image_table2"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/masa4" />

        <ImageButton
            android:id="@+id/image_table3"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/masa4" />


    </com.google.android.material.chip.ChipGroup>



    <com.google.android.material.chip.ChipGroup
        android:layout_width="match_parent"
        android:layout_height="200dp">

    <ImageButton
        android:id="@+id/image_table4"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/masa2"/>

    <ImageButton
        android:id="@+id/image_table5"
         android:layout_width="wrap_content"
         android:layout_height="200dp"
         android:src="@drawable/masa2"/>

    <ImageButton
        android:id="@+id/image_table6"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/masa8"/>

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/button_table"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/border"
        android:text="Reserve" />

</LinearLayout>